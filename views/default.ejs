<script>
    function clk() {
                wk='<wk>';
                var a=new Date();   
                document.getElementById("clkText").innerHTML=wk+a.toDateString().replace(' ','</wk> ')+" "+addZero(a.getHours()) + ":" + addZero(a.getMinutes());
            }
    function addZero(i) {
            if (i < 10) {
                i = "0" + i;
                }
            return i;
        }

    clk();
    setInterval(clk, 1000);

</script>
